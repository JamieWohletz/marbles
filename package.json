{
  "name": "marbles",
  "version": "0.0.0-semantic-release",
  "description": "Client-side hierarchical routing library supporting optional views.",
  "main": "./src/marbles.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "./node_modules/.bin/eslint .",
    "lint:fix": "./node_modules/.bin/eslint --fix .",
    "test": "cross-env BABEL_ENV=test mocha --compilers js:babel-core/register --recursive",
    "test:with-coverage": "npm run clean:coverage && cross-env BABEL_ENV=test nyc --reporter=json mocha --compilers js:babel-core/register --recursive",
    "test:check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "test:publish-coverage": "codecov",
    "prebuild": "npm run clean",
    "build": "npm-run-all --parallel build:*",
    "build:lib": "babel src --out-dir lib",
    "build:umd": "webpack --output-filename marbles.js",
    "build:umd.min": "webpack -p --output-filename marbles.min.js",
    "prepublish": "in-install || npm run build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "clean": "npm-run-all --parallel clean:*",
    "clean:build": "rimraf dist lib",
    "clean:coverage": "rimraf .nyc_output coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JamieWohletz/marbles.git"
  },
  "keywords": [],
  "author": {
    "name": "Jamie Wohletz",
    "email": "reflectiveresistance@gmail.com",
    "website": "jamiewohletz.com"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JamieWohletz/marbles/issues"
  },
  "homepage": "https://github.com/JamieWohletz/marbles#readme",
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-__coverage__": "^11.0.0",
    "babel-plugin-add-module-exports": "^0.2.1", 
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "commitizen": "^2.8.2",
    "cross-env": "^1.0.8",
    "cz-conventional-changelog": "^1.1.6",
    "eslint": "^2.12.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.8.0",
    "eslint-plugin-jsx-a11y": "^1.2.2",
    "eslint-plugin-react": "^5.1.1",
    "ghooks": "^1.2.4",
    "mocha": "^3.0.0",
    "mock-browser": "^0.92.12",
    "npm-run-all": "^2.1.2",
    "nyc": "^6.4.4",
    "rimraf": "^2.5.2",
    "semantic-release": "^4.3.5",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0",
    "validate-commit-msg": "^2.6.1",
    "webpack": "^1.13.1"
  },
  "dependencies": {
    "in-publish": "^2.0.0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test:with-coverage -- -R dot"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "instrument": false,
    "sourceMap": false
  }
}
